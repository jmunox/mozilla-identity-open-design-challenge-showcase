{
  "name": "mozilla-identity-open-design-challenge-showcase",
  "version": "0.0.1",
  "description": "Showcase of Mozilla Identity Open Design Challenge",
  "main": "index.js",
  "author": "jmunox",
  "license": "MIT",
  "engines": {
    "node": ">=8",
    "yarn": "*"
  },
  "dependencies": {
    "abortcontroller-polyfill": "^1.5.0",
    "bulma": "^0.9.0",
    "classnames": "^2.2.6",
    "components": "^0.1.0",
    "dompurify": "^2.1.1",
    "fast-memoize": "^2.5.2",
    "moment": "^2.29.0",
    "preact": "^10.4.7",
    "prop-types": "<= 15.x.x",
    "react": "<= 16.x.x",
    "react-dom": "*",
    "react-dotdotdot": "^1.3.1",
    "react-easy-state": "^6.1.3",
    "react-html-parser": "^2.0.2",
    "react-router-dom": "^5.2.0",
    "react-truncate": "^2.4.0",
    "tiny-debounce": "^0.1.1",
    "whatwg-fetch": "^3.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@babel/plugin-transform-runtime": "^7.11.0",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.10.4",
    "@fortawesome/fontawesome-free": "^5.14.0",
    "api-now": "^0.5.4",
    "autoprefixer": "^9.8.6",
    "concurrently": "^5.2.0",
    "css-loader": "^4.3.0",
    "faker": "^4.1.0",
    "parcel": "^1.12.4",
    "postcss-camel-case": "^1.0.1",
    "postcss-modules": "^3.2.2",
    "rimraf": "^3.0.2",
    "sass": "^1.26.10"
  },
  "scripts": {
    "build": "rimraf ./dist && parcel build ./src/index.html",
    "start": "parcel serve ./src/index.html",
    "mock-api": "$(cat .env | xargs -n1 echo export) && api-now ./db/db.json --static ./public --port $API_PORT",
    "serve": "api-now --static ./dist",
    "dev": "concurrently -r \"npm:start\" \"npm:mock-api\""
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "keywords": [
    "parcel",
    "parcelui",
    "react",
    "router",
    "css",
    "sass",
    "bulma"
  ],
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "avoid"
  },
  "postcss": {
    "modules": true,
    "plugins": {
      "autoprefixer": {
        "grid": true
      },
      "postcss-modules": {
        "camelCase": true
      },
      "postcss-camel-case": {}
    }
  },
  "alias": {
    "components": "./src/components",
    "stores": "./src/stores",
    "utils": "./src/utils",
    "react": "./node_modules/preact/compat",
    "react-dom": "./node_modules/preact/compat"
  }
}
